
/****** Components *********/
@import 'general/vars.styl'
@import 'general/functions.styl'

/***************************/

body
	font-family sans-serif

#slider
	width 90%
	margin 0 auto
	border 1px solid red
	
.slider-ventura
	position relative
	clear both
	z-index 1
	overflow hidden
	& img
		vertical-align middle
		
.track-ventura
	height 100%
	width 100%
	transition margin-left .5s ease
	position relative
		
.slide-ventura
	transition margin-left .5s ease
	vertical-align middle
	float left
	top 0
	border 1px solid white
	&.centerW-ventura
		centerW()
	
.controls-ventura
	& .arrow-ventura
		position absolute
		centerH()
		opacity 0.8
		height 30px
		width 80px
		background-color darkgreen
		cursor pointer
		&.activated, &:hover
			opacity 1
		&.inactivated
			cursor default
			opacity 0.4
		&.prev-ventura
			left 5%
		&.next-ventura
			right 5%
	